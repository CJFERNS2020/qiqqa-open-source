<UserControl x:Class="Utilities.GUI.AugmentedSearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
             MinWidth="100"
>
    <Grid>
        <TextBox Name="TextPrompt" Height="28" VerticalContentAlignment="Center" Padding="3 5 19 5" IsHitTestVisible="False" Focusable="False"/>
        <controls:AutoCompleteBox  Name="TextSearch" Height="28"  VerticalContentAlignment="Center" VerticalAlignment="Center" Padding="3 5 19 5" BorderBrush="Transparent"/>
        <DockPanel>
            <Image DockPanel.Dock="Right" Name="ImageClear" Width="24" Height="24"/>
            <Grid/>
        </DockPanel>
    </Grid>
</UserControl>